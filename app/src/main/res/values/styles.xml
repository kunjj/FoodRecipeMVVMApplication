<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="chipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_background</item>
        <item name="android:textColor">@color/chip_text_color</item>
    </style>
    
    <style name="SplashScreenStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="TabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="background">@color/green</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>

    <style name="TabLayoutTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="FavoriteRecipeTitleStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:text" tools:text="@string/recipes" />
        <item name="fontFamily">@font/courgette</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">5dp</item>
        <item name="android:paddingVertical" tools:targetApi="o">5dp</item>
    </style>

    <style name="FavoriteRecipeSummaryStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:maxLines">3</item>
        <item name="android:alpha">0.7</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">7dp</item>
        <item name="android:paddingVertical" tools:targetApi="o">5dp</item>
    </style>
</resources>